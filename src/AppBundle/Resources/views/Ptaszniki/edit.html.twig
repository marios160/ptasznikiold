{% extends "base.html.twig" %}

{% block title %}Ptaszniki{% endblock %}

{% block body %}
    <form action="{{path('editZapiszPtasznik')}}" method="POST">
        <div class="zapiszEdycje">
        <table>
            <tr>

                <th>{#<a href="{{path('showPtaszniki', {'field':'id',currentPage:thisPage})}}">#}ID{#</a>#}</th>
                <th>{#<a href="{{path('showPtaszniki', {'field':'kodEan'})}}">#}Kod EAN{#</a>#}</th>
                <th>{#<a href="{{path('showPtaszniki', {'field':'nazwaLacinska'})}}">#}Nazwa łacińska{#</a>#}</th>
                <th>{#<a href="{{path('showPtaszniki', {'field':'nazwaPolska'})}}">#}Nazwa polska{#</a>#}</th>
                <th>{#<a href="{{path('showPtaszniki', {'field':'uwagi'})}}">#}Uwagi{#</a>#}</th>
                <th>{#<a href="{{path('showPtaszniki', {'field':'kodDostawy'})}}">#}Kod dostawy{#</a>#}</th>
                <th>{#<a href="{{path('showPtaszniki', {'field':'magazyn'})}}">#}Magazyn{#</a>#}</th>
                <th>{#<a href="{{path('showPtaszniki', {'field':'terrarium'})}}">#}Terrarium{#</a>#}</th>
                <th>{#<a href="{{path('showPtaszniki', {'field':'zakupRozmiar'})}}">#}Rozmiar przy zakupie{#</a>#}</th>
                <th>{#<a href="{{path('showPtaszniki', {'field':'aktualnyRozmiar'})}}">#}Aktualny rozmiar{#</a>#}</th>
                <th>{#<a href="{{path('showPtaszniki', {'field':'plec'})}}">#}Płeć{#</a>#}</th>
                <th>{#<a href="{{path('showPtaszniki', {'field':'lpWPartii'})}}">#}Lp. w partii{#</a>#}</th>
                <th>{#<a href="{{path('showPtaszniki', {'field':'wydrukEtykiety'})}}">#}Wydruk etykiety{#</a>#}</th>
            </tr>
            {% for item in ptaszniki %}
                <tr>
                    <td>{{item.id}}<input type="hidden" name="ptasznikiEdit[{{item.id}}][id]" value="{{item.id}}"/></td>
                    <td><input type="text" name="ptasznikiEdit[{{item.id}}][kodEan]" value="{{item.kodEan}}"/></td>
                    <td><input type="text" name="ptasznikiEdit[{{item.id}}][nazwaLacinska]" value="{{item.nazwaLacinska}}"/></td>
                    <td><input type="text" name="ptasznikiEdit[{{item.id}}][nazwaPolska]" value="{{item.nazwaPolska}}"/></td>
                    <td><input type="text" name="ptasznikiEdit[{{item.id}}][uwagi]" value="{{item.uwagi}}"/></td>
                    <td><input type="text" name="ptasznikiEdit[{{item.id}}][kodDostawy]" value="{{item.kodDostawy}}"/></td>
                    <td>
                        <select name="ptasznikiEdit[{{item.id}}][magazyn]">
                            <option value="" selected></option>
                            {% for mag in magazyny %}
                                <option value="{{mag.id}}" {{ mag.nazwa == item.magazyn ? 'selected' : ''}} >{{mag.nazwa}}</option>
                            {% endfor %}
                        </select>
                    </td>
                    <td>
                        <select name="ptasznikiEdit[{{item.id}}][terrarium]">
                                <option value="" selected></option>
                            {% for ter in terraria %}
                                <option value="{{ter.id}}" {{ ter.nazwa == item.terrarium ? 'selected' : ''}}>{{ter.nazwa}}</option>
                            {% endfor %}
                        </select>
                    </td>
                    <td><input type="text" name="ptasznikiEdit[{{item.id}}][zakupRozmiar]" value="{{item.zakupRozmiar}}"/></td>
                    <td><input type="text" name="ptasznikiEdit[{{item.id}}][aktualnyRozmiar]" value="{{item.aktualnyRozmiar}}"/></td>
                    <td><input type="text" name="ptasznikiEdit[{{item.id}}][plec]" value="{{item.plec}}"/></td>
                    <td><input type="text" name="ptasznikiEdit[{{item.id}}][lpWPartii]" value="{{item.lpWPartii}}"/></td>
                    <td><input type="text" name="ptasznikiEdit[{{item.id}}][wydrukEtykiety]" value="{{item.wydrukEtykiety}}"/></td>

                </tr>
            {% endfor %}
        </table>

        
            <button type="submit">Zapisz</button>
        </div>
    </form>
{% endblock %}
